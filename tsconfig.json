{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@nestseed/*": ["./packages/*/lib"]
    }
  },
  "include": ["packages/*/lib/**/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "packages/*/src/**/*",
    "vite.config.ts",
    "**/vite.config.ts"
  ]
}
